<?xml version = "1.0"?>
<config>
    <tabs>
        <boilerplate translate="label" module="core">
            <label><![CDATA[<div>Boilerplate Extensions</div>]]></label>
            <class>boilerplate-extensions-section</class>
            <sort_order>300</sort_order>
        </boilerplate>
    </tabs>
    <sections>
		<boilerplate_all translate="label">
			<label>Global Options</label>
            <tab>boilerplate</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <social_media translate="label">
                    <label>Social Media</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled_links translate="label comment">
                            <label>Enable Links</label>
                            <comment>Used to link to profile pages, shown in the footer by default.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled_links>

                        <enabled_share translate="label comment">
                            <label>Enable Sharing</label>
                            <frontend_type>select</frontend_type>
                            <comment>Used to share a product, shown on the product page by default.</comment>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled_share>

                        <twitter_username translate="label comment">
                            <label>Twitter Username</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </twitter_username>

                        <facebook_url translate="label comment">
                            <label>Facebook URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </facebook_url>

                        <google_url translate="label comment">
                            <label>Google+ URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </google_url>

                        <pinterest_url translate="label comment">
                            <label>Pinterest URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </pinterest_url>

                        <youtube_url translate="label comment">
                            <label>YouTube URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </youtube_url>
                    </fields>
                </social_media>
            </groups>
    	</boilerplate_all>
    </sections>
</config>